{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": false,
      "moduleResolution": "node",
      "module": "ESNext",
      "target": "ES2021",
      "lib": ["ESNext"],
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true
    },
    "exclude": ["node_modules", "dist", "bin"]
  }