---
import ChromeLogo from "../../devices/Chrome.astro";
import FirefoxLogo from "../../devices/Firefox.astro";
import Webkit from "../../devices/Webkit.astro";
import Edge from "../../devices/Edge.astro";

const browsers: { name: string; logo: typeof ChromeLogo }[] = [
  {
    name: "Chrome",
    logo: ChromeLogo,
  },
  {
    name: "Firefox",
    logo: FirefoxLogo,
  },
  {
    name: "Webkit",
    logo: Webkit,
  },
  {
    name: "Edge",
    logo: Edge,
  },
];
---

<div class="px-8 pt-32">
  <div
    class="bg-surface-container py-4 z-0 relative px-12 rounded-3xl max-w-[120rem] flex items-center space-between space-x-24"
  >
    <span class="absolute inset-0 -z-10 bg-primary/25 rounded-3xl"></span>
    <div class="w-fit">
      <h1
        class="text-4xl font-bold text-shadow-md tracking-tight text-on-surface sm:text-7xl"
      >
        <span class="text-center text-inverse-on-surface text-5xl">
          Open-source
        </span>
        <br />
        Visual Review &
        <br />
        Testing Platform
      </h1>

      <p
        class="text-on-surface-variant text-lg font-semibold text-left mt-8 max-w-2xl"
      >
        Connect your codebase with our many integrations and let us monitor your
        ui changes for you.
        <br />
      </p>
      <div class="flex space-x-8 py-12">
        <a
          href="#"
          class="bg-inverse-surface text-inverse-on-surface rounded-lg shadow-lg hover:rounded-2xl transition-all px-6 py-4 text-xl font-semibold"
        >
          Get Started
        </a>
        <a
          href="#"
          class="text-on-surface border border-outline hover:bg-primary/15 rounded-lg hover:rounded-2xl transition-all px-6 py-4 text-xl font-semibold"
        >
          Playground
        </a>
      </div>
    </div>
    <div class="relative self-stretch grow">
      <div
        class="absolute inset-x-0 -inset-y-12 bg-[#be7e91] shadow-sm rounded-3xl"
      >
        <!-- <Image
          src={darkScreenshotImage}
          alt="Dark mode screenshot of the playground"
          class="rounded-3xl"
        /> -->
      </div>
    </div>
  </div>
</div>

<div class="h-96 w-full relative z-0 flex justify-center mt-32 flex-col mx-auto">
  <span
    class="absolute inset-x-0 top-0 h-[35rem] -z-10 bg-gradient-to-b from-tertiary-container to-transparent rounded-t-full"
  ></span>
  <h3
    class="pb-12 text-on-tertiary-container text-3xl text-center font-semibold"
  >
    Capture across multiple browsers and devices out of the box
  </h3>
  <div class="flex justify-around px-24 py-6">
    {
      browsers.map(({ name, logo: Logo }) => (
        <div class="flex items-center space-x-3">
          <Logo class="w-12 h-12 text-on-tertiary-container/75" />
          <span class="text-on-tertiary-container/75 font-bold text-2xl">
            {name}
          </span>
        </div>
      ))
    }
  </div>
</div>

