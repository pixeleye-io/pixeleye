{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "KRATOS_PUBLIC_URL",
    "ORY_SDK_URL",
    "ORY_ENDPOINT",
    "GITHUB_DOCS_TOKEN",
    "GITHUB_APP_NAME"
  ],
  "pipeline": {
    "deploy": {
      "dependsOn": ["^build", "sitemap"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "sitemap": {
      "dependsOn": ["build"],
      "outputs": ["public/robots.txt", "public/sitemap*.xml"]
    },
    "build:types": {},
    "lint": {},
    "types": {},
    "setup:test": {},
    "test": {
      "dependsOn": ["setup:test"]
    },
    "test:api": {},
    "storybook": {},
    "start": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    }
  }
}
